<Window x:Class="rvtRebars.SettingsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:rvtRebars"
        mc:Ignorable="d"
        Title="NWC Export Settings" Height="250" Width="411"
        SizeToContent="Height" WindowStartupLocation="CenterScreen">

        <!-- Mapping File Row -->

    <StackPanel Margin="10">
        <TextBlock Text="Select 3D Views to Export:" FontWeight="Bold" Margin="0,0,0,10"/>

<Grid Margin="0,0,0,8">

    <!-- TextBox -->
    <TextBox Name="txtFilter"
             Height="25"
             Padding="25,0,25,0"
             VerticalContentAlignment="Center"
             TextChanged="txtFilter_TextChanged"
             ToolTip="Type to filter views..."/>

    <!-- Search Icon (Left) -->
    <TextBlock Text="&#xE721;"
               FontFamily="Segoe MDL2 Assets"
               FontSize="14"
               Margin="5,0,0,0"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               Foreground="Gray"
               IsHitTestVisible="False"/>

    <!-- Clear Button (Right) -->
    <TextBlock Name="btnClearFilter"
               Text="&#xE10A;"
               FontFamily="Segoe MDL2 Assets"
               FontSize="12"
               Margin="0,0,5,0"
               VerticalAlignment="Center"
               HorizontalAlignment="Right"
               Foreground="Gray"
               Cursor="Hand"
               Visibility="Collapsed"
               MouseLeftButtonUp="btnClearFilter_Click"/>

</Grid>


<StackPanel Orientation="Horizontal" Margin="0,0,0,5">

    <TextBlock Text="Check All (Filtered)"
               Margin="0,0,15,0"
               Cursor="Hand"
               Foreground="Blue"
               MouseLeftButtonUp="CheckAllFiltered_Click">
        <TextBlock.TextDecorations>
            <TextDecorationCollection>
                <TextDecoration Location="Underline"/>
            </TextDecorationCollection>
        </TextBlock.TextDecorations>
    </TextBlock>

    <TextBlock Text="Uncheck All (Filtered)"
               Cursor="Hand"
               Foreground="Blue"
               MouseLeftButtonUp="UncheckAllFiltered_Click">
        <TextBlock.TextDecorations>
            <TextDecorationCollection>
                <TextDecoration Location="Underline"/>
            </TextDecorationCollection>
        </TextBlock.TextDecorations>
    </TextBlock>

</StackPanel>


    <Border BorderBrush="CadetBlue" BorderThickness="1" Padding="0">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="250">
            <ItemsControl Name="ViewsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                            <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="2"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Border>


        <StackPanel Margin="0,10,0,0">
            <TextBlock Text="Type or browse the output folder path:" FontWeight="Bold" Margin="0,0,0,5"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox Name="txtFolderPath"
                        Height="25"
                        Margin="0,0,10,0"
                        VerticalContentAlignment="Center"
                        Grid.Column="0"/>

                <Button Name="btnBrowse"
                        Click="btnBrowse_Click"
                        Width="75"
                        Height="25"
                        Grid.Column="1">
                    Browse
                </Button>
            </Grid>
        </StackPanel>

        <!-- Save / Cancel Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="OK" Width="75" Height="25" Margin="5" Click="OKButton_Click"/>
            <Button Content="Cancel" Width="75" Height="25" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>