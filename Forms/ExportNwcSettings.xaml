<Window x:Class="rvtRebars.SettingsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:rvtRebars"
        mc:Ignorable="d"
        Title="NWC Export Settings" Height="250" Width="411"
        SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">

        <!-- Mapping File Row -->

    <StackPanel Margin="10">
        <TextBlock Text="Select 3D Views to Export:" FontWeight="Bold" Margin="0,0,0,10"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="250">
            <ItemsControl Name="ViewsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="2"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>



    <StackPanel Margin="20">
        <TextBlock Text="Select or paste a folder path:" Margin="0,0,0,5"/>
        <TextBox Name="txtFolderPath" Height="25"/>
        <Button Name="btnBrowse" Click="btnBrowse_Click" Width="120" Height="30" Margin="0,10,0,0">
            Browse Folder
        </Button>
    </StackPanel>


        <!-- Save / Cancel Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Center">
            <Button Content="Save" Width="75" Margin="5" Click="OKButton_Click"/>
            <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>