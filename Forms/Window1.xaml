<Window x:Class="rvtRebars.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:rvtRebars"
		xmlns:local="clr-namespace:rvtRebars"
	Title="Slice Inverter" Height="260" Width="300"
    Topmost="True"
    WindowStartupLocation="CenterScreen">


		<Grid
		Margin="10,10,10,10"
		HorizontalAlignment="Center">

		<Grid.RowDefinitions>
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="Auto" />
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="70" />
			<ColumnDefinition
				Width="70" />
			<ColumnDefinition
				Width="70" />
			<ColumnDefinition
				Width="70" />
		</Grid.ColumnDefinitions>
		<StackPanel
			Margin="0,0,0,10"
			Grid.Row="0"
			Grid.ColumnSpan="4">
			<GroupBox
				Header="Segment UniqueID:"
				BorderThickness="0"
				Margin="0,0,0,5">
				<ComboBox
					x:Name="cboxUniqueIds"
					Margin="0,5,0,0"
					Height="25"
					VerticalAlignment="Top"
					BorderThickness="1"
					VerticalContentAlignment="Center"
					Background="Transparent"
					Foreground="Black"
					SelectionChanged="comboUniqueIds_SelectionChanged" />
			</GroupBox>
			<GroupBox
				Header="Slice:"
				BorderThickness="0"
				Margin="0,0,0,5">
				<ComboBox
					x:Name="cboxSlices"
					Margin="0,5,0,0"
					Height="25"
					VerticalAlignment="Top"
					BorderThickness="1"
					VerticalContentAlignment="Center"
					Background="Transparent"
					Foreground="Black"
					SelectionChanged="cboxSlices_SelectionChanged" />
			</GroupBox>
		</StackPanel>

        <!-- ZOOM TO -->
            <!-- FontFamily="Segoe MDL2 Assets" 
            FontSize="16"
            Content ="&#xe8a3;" -->
		<Button
			Grid.Row="1"
			Grid.Column="0"
            Background="Transparent"
            BorderThickness="0"
			Height="82"
			Click="BtnZoomTo"
			Width="70"
            >
            <StackPanel>

            <Image Source="pack://application:,,,/rvtRebars;component/Resources/binoculars.png" 				
                Width="32"
				Height="32"
				Stretch="Uniform"
            />
			
            <TextBlock
                Text="Zoom to"
                TextWrapping="Wrap"
                TextAlignment="Center"
                Grid.Column="0"
                Grid.Row="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                Width="70"
                Height="50">
            </TextBlock>

            </StackPanel>

        </Button>
		
            <!-- COLOR BY SLICE -->
                         <!-- FontFamily="Segoe MDL2 Assets"
			FontSize="32"
			Content="&#xE790;" -->
            <Button
            Background="Transparent"
            BorderThickness="0"
			Grid.Row="1"
			Grid.Column="1"
			Height="35"
			Margin="0,0,0,0"

			Click="BtnColorBySlice"
			Width="35">
                <Image Source="pack://application:,,,/rvtRebars;component/Resources/rainbow.png" 				
                Width="32"
				Height="32"
				Stretch="Uniform"
                />
        </Button>
		<TextBlock
			Text="Colour Slices"
			TextWrapping="Wrap"
			TextAlignment="Center"
			Grid.Column="1"
			Grid.Row="2"
			HorizontalAlignment="Center"
			VerticalAlignment="Stretch"
			Margin="0,0,0,56.92"
			Width="50"
			Height="39.2"></TextBlock>

            <!-- SELECT  -->
            <!-- Content="&#xe8b3;"
            FontFamily="Segoe MDL2 Assets" 
            FontSize="32" -->
		<Button
        	Background="Transparent"
			BorderThickness="0"
			Grid.Row="1"
			Grid.Column="2"
			Height="35"
			Margin="0,0,0,0"

			Click="BtnSelectClick"
			Width="35">
        
                <Image Source="pack://application:,,,/rvtRebars;component/Resources/addToSelection.png" 				
                Width="32"
				Height="32"
				Stretch="Uniform"
                />
        </Button>
		<TextBlock
			Text="Select Rebars"
			TextWrapping="Wrap"
			TextAlignment="Center"
			Grid.Column="2"
			Grid.Row="2"
			HorizontalAlignment="Center"
			VerticalAlignment="Stretch"
			Margin="0,0,0,56.92"
			Width="70"
			Height="39.2"></TextBlock>

            <!-- INVERT LAYERS -->
            <!-- Content="&#xE8B1;"
            FontFamily="Segoe MDL2 Assets" 
            FontSize="32" -->
		<Button
            Background="Transparent"
			BorderThickness="0"
			Grid.Row="1"
			Grid.Column="3"
			Height="35"
			Margin="0,0,0,0"

			Click="BtnInvertLayers"
			Width="35">
                <Image Source="pack://application:,,,/rvtRebars;component/Resources/shuffle.png" 				
                Width="32"
				Height="32"
				Stretch="Uniform"
                />
        </Button>
		<TextBlock
			Text="Invert Layers"
			TextWrapping="Wrap"
			TextAlignment="Center"
			Grid.Column="3"
			Grid.Row="2"
			HorizontalAlignment="Center"
			VerticalAlignment="Stretch"
			Margin="0,0,0,56.92"
			Width="50"
			Height="39.2"></TextBlock>
	</Grid>

</Window>
