<Window x:Class="rvtRebars.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:rvtRebars"
		xmlns:local="clr-namespace:rvtRebars"
        
	Title="Slice Inverter" Height="300" Width="300"
    Topmost="True"
    WindowStartupLocation="CenterScreen">


		<StackPanel Margin="0,10,0,0">



            <GroupBox Header="Segment UniqueID:" BorderThickness="0" Margin="0,0,0,5">
                
                    <ComboBox x:Name="cboxUniqueIds"   
                        Margin = "0,5,0,0"
                        Height="25"   
                        VerticalAlignment="Top"  
                        BorderThickness="1"  
                        VerticalContentAlignment="Center"  
                        Background="Transparent"  
                        Foreground="Black"                         
                        SelectionChanged="comboUniqueIds_SelectionChanged"
                        />
           
            </GroupBox>

            <GroupBox Header="Slice:" BorderThickness="0" Margin="0,0,0,5">
                    <ComboBox x:Name="cboxSlices"   
                        Margin = "0,5,0,0"
                        Height="25"   
                        VerticalAlignment="Top"  
                        BorderThickness="1"  
                        VerticalContentAlignment="Center"  
                        Background="Transparent"  
                        Foreground="Black"                         
						SelectionChanged="cboxSlices_SelectionChanged" 
					/>
            </GroupBox>             

            <StackPanel
			Orientation="Horizontal"
			HorizontalAlignment="Center"
			Margin="0,0,0,0">



			<Button
				Width="90"
				Height="32.8"
				Margin="0,0,25,0"
				Content="Select"
                Click="BtnSelectClick" >
            </Button>
                
			<Button
				Width="90"
				Height="32.8"
				Margin="25,0,0,0"
				Content="Invert Layers"
                Click = "BtnInvertLayers"                
                >
            </Button>

		</StackPanel>


            <StackPanel
			Orientation="Horizontal"
			HorizontalAlignment="Center"
			Margin="0,0,0,0">

            <Button
				Width="90"
				Height="32.8"
				Margin="0,0,25,0"
				Content="Zoom to"
                Click="BtnZoomTo" >
            </Button>

            <Button
				Width="90"
				Height="32.8"
				Margin="0,0,25,0"
				Content="Color Slice"
                Click="BtnColorBySlice" >
            </Button>

        </StackPanel>


		<TextBlock x:Name="OutputText"/>
    </StackPanel>

</Window>
